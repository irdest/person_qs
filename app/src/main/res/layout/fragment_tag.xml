<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/title_bar_tag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_main_height"
        android:background="@color/colorMain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title_bar_tag"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/title_main_padding"
        android:text="@string/title_tag"
        android:textSize="@dimen/title_main_tv_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="tag" />

</RelativeLayout>
